<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Lingkaran di tengah dengan latar belakang putih -->
    <item>
        <shape android:shape="oval">
            <solid android:color="#1CC642" />
            <size
                android:width="180dp"
                android:height="180dp" />
        </shape>
    </item>

    <!-- Outline (stroke) putih untuk lingkaran -->
    <item>
        <shape android:shape="oval">
            <stroke
                android:width="5dp"
                android:color="#fff" />
        </shape>
    </item>
</layer-list>
