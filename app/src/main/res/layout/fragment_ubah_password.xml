<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:id="@+id/lii"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:orientation="horizontal"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <ImageView
            android:id="@+id/btn_back_tentang_aplikasi"
            android:layout_width="34dp"
            android:layout_height="50dp"
            android:src="@drawable/baseline_arrow_back_24"/>

        <TextView
            android:layout_width="0dp"
            android:paddingStart="5dp"
            android:layout_height="50dp"
            android:layout_weight="1"
            android:text="Tentang Aplikasi"
            android:textSize="20dp"
            android:textStyle="bold"
            android:textColor="#000"
            android:gravity="left|center"/>

    </LinearLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintTop_toBottomOf="@id/lii"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <ImageView
            android:id="@+id/Gambar_Pelanggaran_Kosong"
            android:layout_width="115dp"
            android:layout_height="96dp"
            android:layout_marginBottom="32dp"
            android:src="@drawable/icon_kunci"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.198" />

        <TextView
            android:id="@+id/textView13"
            android:layout_width="350dp"
            android:layout_height="30dp"
            android:layout_marginTop="50dp"
            android:paddingStart="5dp"
            android:text="Masukkan Password Lama"
            android:textColor="#000"
            android:textSize="20dp"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/Gambar_Pelanggaran_Kosong" />

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/constraintLayout19"
            android:layout_width="350dp"
            android:layout_height="50dp"
            android:layout_marginTop="8dp"
            android:background="@drawable/bar_login_ubah_password"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textView13"
            tools:ignore="MissingConstraints">

            <EditText
                android:id="@+id/teks_ubah_password_lama"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="tran"
                android:paddingStart="20dp"
                android:text="Password Lama"
                android:textAlignment="viewStart"
                android:textColor="#000" />

        </androidx.constraintlayout.widget.ConstraintLayout>

        <TextView
            android:id="@+id/textView14"
            android:layout_width="350dp"
            android:layout_height="30dp"
            android:layout_marginTop="32dp"
            android:paddingStart="5dp"
            android:text="Masukkan Password Baru"
            android:textColor="#000"
            android:textSize="20dp"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/constraintLayout19" />

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/constraintLayout20"
            android:layout_width="350dp"
            android:layout_height="50dp"
            android:background="@drawable/bar_login_ubah_password"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textView14"
            tools:ignore="MissingConstraints">

            <EditText
                android:id="@+id/teks_masukkan_password_baru"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="tran"
                android:paddingStart="20dp"
                android:text="Password Baru"
                android:textAlignment="viewStart"
                android:textColor="#000" />

        </androidx.constraintlayout.widget.ConstraintLayout>


        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="250dp"
            android:layout_height="50dp"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="90dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/constraintLayout20"
            tools:ignore="MissingConstraints">

            <Button
                android:id="@+id/btn_kirim_tentang_aplikasi"
                android:layout_width="250dp"
                android:layout_height="50dp"
                android:background="@drawable/bg_btn_kirim"
                android:text="Kirim"
                android:textColor="#fff"
                android:textSize="20dp"
                android:textStyle="bold" />


        </androidx.constraintlayout.widget.ConstraintLayout>





    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
